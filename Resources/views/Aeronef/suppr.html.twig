{% extends 'DJETGimelaBundle:Acceuil:menuracine.html.twig' %} 
{% block body %}
<h3> {{ form_titre }} </h3>

<div class="well">
  {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}

    {# Les erreurs générales du formulaire. #}
    {{ form_errors(form) }}

    <p>
      L'aeronef  dont les caractéristiques suivent {{operation}} par <b>{{app.request.session.get('login')}}</b> dans la base de données<br />
      Type : {{ type }}<br />
      Immatriculation : {{ immat }}<br />
      Statut : {{ statut }}<br />
      Dispositif d'envol : {{ envol }}<br />
    </p>
    {# Les boutons de validation ou annulation #}
    <div class="form-group">
	{{ form_widget(form.Supprimer, {'attr': {'class': 'col-sm-2 btn btn-primary'}}) }}
        <div class="col-sm-4">
	  {{ form_widget(form.Annuler, {'attr': {'class': 'col-sm-6 btn btn-primary'}}) }}
        </div>
    </div>
  {# Fermeture de la balise <form> du formulaire HTML #}
  {{ form_end(form) }}
</div>
{% endblock %}
