{% extends 'DJETGimelaBundle:Acceuil:menuracine.html.twig' %}

{% block body %}
    <h1>Liste des aéronefs</h1>

    <table class="table table-striped">
    {#<table class="records_list" border=1>#}
      	{#<thead align="center">#}
        <thead>
	    <tr>
                <th width=5%>Id</th>
                <th>Type</th>
                <th>Immat</th>
                <th>Statut</th>
                {#<th>Envol</th>#}
                <th>Date creation</th>
                <th>Createur</th>
		<th>Modifier</th>
		<th>Supprimer</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td width> {{ entity.id}} </td>
                <td>{{ entity.aeroType }}</td>
                <td>{{ entity.aeroImmat }}</td>
                {% if entity.aeroStatut < 1 %} <td>Planeur</td> {% else%} <td>Rem.</td> {%endif%}
                <td>{{ entity.aeroDate|date('Y-m-d H:i:s') }}</td>
                <td>{{ entity.aeroCreateur.usrLogin }}</td>
                <td><a href="{{ path('aeronef_modif', { 'id': entity.id }) }}">Modifier</a></td>
                <td><a href="{{ path('aeronef_suppr', { 'id': entity.id }) }}">Supprimer</a></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        {#<li>
            Nombre d'aéronefs : {{ quantites }}
        </li>
        <li>
            Nombre de remorqueurs : {{ remorqueurs }}
        </li>
        <li>
            Nombre de planeurs : {{ planeurs }}
        </li>#}
    	</ul>
{% endblock %}
